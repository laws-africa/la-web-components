{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ]
  },
  "globals": {
    "it": true,
    "describe": true,
    "expect": true,
    "jest": true,
    "HTMLElement": true,
    "Element": true,
    "HTMLInputElement": true,
    "fetch": true,
    "MutationObserver": true
  }
}
